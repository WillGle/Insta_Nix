#!/usr/bin/env bash
set -euo pipefail
# Dynamic detection
MONITOR=$(hyprctl monitors -j | jq -r '.[0].name')
WIDTH=$(hyprctl monitors -j | jq -r '.[0].width')
HEIGHT=$(hyprctl monitors -j | jq -r '.[0].height')
SCALE=$(hyprctl monitors -j | jq -r '.[0].scale')
hyprctl monitors | awk -v m="$MONITOR" '
  $0 ~ ("^Monitor " m) {f=1; next}
  f && /@/ {match($0,/@([0-9.]+)/,a); if(a[1]){printf("%dHz\n", a[1]+0); exit}}
'
